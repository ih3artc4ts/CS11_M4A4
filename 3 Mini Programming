
# AREA OF A CIRCLE

print("Welcome to the radius calculator!")
radius_string = input("Enter the radius of the circle here: ")


# convert string â†’ int
radius = int(radius_string)


# calculate area
pi = 3.14159
area = pi * (radius ** 2)


# convert back to string for concatenation
print("The area of the circle is: " + str(area))

#2 EXPRESSION SOLVER

print("Welcome to the Expression Solver: (a - b) + (a * b) ===")


a_string = input("Enter value for a: ")
b_string = input("Enter value for b: ")


# convert string â†’ int
a = int(a_string)
b = int(b_string)


# define the function
def expression(a, b):
    return (a - b) + (a * b)


answer = expression(a, b)


# convert back to string for concatenation
print("The result is: " + str(answer))

